{
  "extends": ["tslint-plugin-prettier", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["app/main.ts", "app/polyfills.ts"],
    "include": ["app/**/*.ts"]
  },
  "rulesDirectory": ["node_modules/codelyzer"],
  "rules": {
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "class-name": true,
    "comment-type": [true, "doc", "singleline"],
    "curly": true,
    "cyclomatic-complexity": [true, 10],
    "deprecation": true,
    "encoding": true,
    "eofline": false,
    "file-name-casing": [true, "kebab-case"],
    "forin": true,
    "function-constructor": true,
    "import-spacing": true,
    "increment-decrement": true,
    "interface-name": [true, "never-prefix"],
    "interface-over-type-literal": true,
    "jsdoc-format": [true, "check-multiline-start"],
    "max-classes-per-file": [true, 1],
    "max-file-line-count": [true, 300],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-instance-field",
          "private-instance-field",
          "protected-instance-field",
          "public-static-field",
          "private-static-field",
          "protected-static-field",
          "public-constructor",
          "private-constructor",
          "protected-constructor",
          "public-instance-method",
          "private-instance-method",
          "protected-instance-method"
        ]
      }
    ],
    "no-angle-bracket-type-assertion": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-console": true,
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-default-import": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-inferrable-types": false,
    "no-inferred-empty-object-type": true,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": true,
    "no-non-null-assertion": true,
    "no-null-undefined-union": true,
    "no-object-literal-type-assertion": true,
    "no-output-on-prefix": false,
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-tautology-expression": true,
    "no-this-assignment": true,
    "no-unbound-method": [
      true,
      {
        "whitelist": ["expect"]
      }
    ],
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-shorthand": true,
    "one-variable-per-declaration": true,
    "only-arrow-functions": false,
    "ordered-imports": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-object-spread": true,
    "prefer-template": true,
    "prettier": true,
    "restrict-plus-operands": true,
    "space-before-function-paren": false,
    "space-within-parens": false,
    "static-this": true,
    "switch-default": true,
    "switch-final-break": true,
    "triple-equals": true,
    "typedef": [true, "arrow-parameter", "call-signature", "parameter", "property-declaration"],
    "unified-signatures": true,
    "unnecessary-constructor": true,
    "unnecessary-else": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "variable-name": {
      "options": ["ban-keywords", "check-format"]
    }
  }
}
{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "paths": {
      "@core": ["app/core/core.barrel"],
      "@dashboard": ["app/dashboard/dashboard.module"],
      "@environments": ["environments/environment"],
      "@employees": ["app/employees/employees.module"]
    },
    "sourceMap": true,
    "target": "es2015"
  }
}
